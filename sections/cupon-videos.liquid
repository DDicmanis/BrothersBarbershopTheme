{{ 'section-cupon-videos.css' | asset_url | stylesheet_tag }}

<div class="videos-section-wrapper">
  <div class="container-main">
    <h2 class="videos-title">{{ section.settings.videos-title }}</h2>
    <p class="videos-text">
{{section.settings.videos-text}}</p>
    <div class="video-grid">
      <div class="video-div1">
        <div class="video-wrapper">
          <video id="video1" playsinline>
            <source src="{{section.settings.videos-video-src-1 }}" type="video/mp4" id="vid">
          </video>
          <div class="video-controll-overlay" id="overlay1">
            <p class="video-length">{{section.settings.videos-video-length-1}}</p>
            <div class="play-icon-wrapper video-section"id="play1">
              <img src="{{'playIcon.svg'| asset_url }}"  class="play-button" alt="play button">
            </div>
          </div>
        </div>
        <h3 class="video-div-title">{{ section.settings.videos-video-title-1 }}</h3>
        <p class="video-description">{{ section.settings.videos-video-description-1 }}</p>
      </div>
      <div class="video-div2">
        <div class="video-wrapper">
          <video id="video2" playsinline>
            <source src="{{section.settings.videos-video-src-2 }}" type="video/mp4" id="vid">
          </video>
          <div class="video-controll-overlay" id="overlay2">
            <p class="video-length">{{section.settings.videos-video-length-2}}</p>
            <div class="play-icon-wrapper video-section"id="play2">
              <img src="{{'playIcon.svg'| asset_url }}"  class="play-button" alt="play button">
            </div>
          </div>
        </div>
        <h3 class="video-div-title">{{ section.settings.videos-video-title-2 }}</h3>
        <p class="video-description">{{ section.settings.videos-video-description-2 }}</p>
      </div>
      <div class="video-div3">
        <div class="video-wrapper">
          <video id="video3" playsinline>
            <source src="{{section.settings.videos-video-src-3 }}" type="video/mp4" id="vid">
          </video>
          <div class="video-controll-overlay" id="overlay3">
            <p class="video-length">{{section.settings.videos-video-length-3}}</p>
            <div class="play-icon-wrapper video-section"id="play3">
              <img src="{{'playIcon.svg'| asset_url }}"  class="play-button" alt="play button">
            </div>
          </div>
        </div>
        <h3 class="video-div-title">{{ section.settings.videos-video-title-3 }}</h3>
        <p class="video-description">{{ section.settings.videos-video-description-3 }}</p>
      </div>
    </div>
  </div>
</div>
