{{ 'section-video-banner.css' | asset_url | stylesheet_tag }}
<div class="banner-text-wrapper">
  <div><h1 class="banner-heading-h1">{{ section.settings.banner-title }}</h1></div>
  
  <h3 class="banner-heading-h3">{{ section.settings.banner-subtitle }}</h3>
  <a class="button button-primary banner-button" href="#" target="blank">BOOK AN APPOINTMENT</a>
  <div class="circle1"></div>
  <div class="circle2"></div>
  <div class="circle3"></div>
  <p class="banner-text-small">SCROLL</p>
</div>
<div class="video-section-wrapper">
  
  <div class="frame-container">
    <video id="bannerVid" muted autoplay loop>
      <source src="{{'placeholder.mp4' | asset_url }}" type="video/mp4" >
    </video>    
  </div>
  
</div> 
{% schema %}
  {
    "name": "Banner",
    "class":"overflow-hidden",
    "settings": [
      {
        "id": "banner-title",
        "type": "text",
        "label": "Banner title",
        "default":"GREAT CUTS. BIG SMILES."
      },
      {
        "id": "banner-subtitle",
        "type": "text",
        "label": "Banner subtitle",
        "default":"Look and feel like your best self."
      }
    ],
    "presets": [
      {
        "name": "Banner",
        "category": "Video"
      }
    ]
  }
{% endschema %}